.cart-item-list
  .shop-item
    position relative
    &>div, label
      float left
      height 60px
    label
      width 30px
      display block
      line-height 60px
      text-align center
    .name
      position absolute
      top 0
      right 60px
      left 75px
      padding 15px 15px 5px
      white-space normal
      p
        font-size 12px
        span
          padding 0 5px
    .calculate-money
      position absolute
      top 0
      right 10px
      color $main
      text-align right
      
  .good-item
    &>div, label
      height 35px
    label
      line-height 30px
    .img
      width 35px
      img
        height 30px
        width 35px
    .name
      position absolute
      top 0
      right 100px
      left 75px
      padding 0
      white-space normal
    .cart-item-list__add-cart
      position absolute
      top 0px   
      right -5px
