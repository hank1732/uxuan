.u-header
  position absolute
  width 100%
  height 45px
  padding 10px 2%
  overflow hidden
  background rgba(0,0,0,0.4)
  z-index 100
  .back-wrap
    position absolute
    left 15px
    color #fff
    line-height 25px
    font-size 18px
  .u-guard
    width 165px
    margin 0 auto
    text-align center
    line-height 25px
    color #222
    font-size 14px
    background $bgc
    border-radius 10px  
  .u-search-icon
    position absolute
    top 4px
    right 15px
    line-height 40px
    i
      color #fff
      font-size 24px 