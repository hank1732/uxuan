.user-info
  h1
    text-align center
    font-size 18px
  img
    display block
    width 20%
    margin 40px auto 20px
    border 2px solid #222
    border-radius 100px
    text-align center
  a
    color #000
  .user-basic
    height 140px
  .user-info-list
    margin 0 20px
    li
      padding 10px
      border-top 1px solid #111
    &>li
      &:last-child
        border-bottom 1px solid #111
    .icon
      display inline-block
      color #387ef5
      font-size 18px
      width 25px
      text-align center
      margin-right 15px