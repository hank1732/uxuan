.u-header
  position absolute
  width 100%
  height 45px
  padding 10px 2%
  overflow hidden
  background rgba(0,0,0,0.4)
  z-index 100
  .back-wrap
    position absolute
    left 15px
    color #fff
    line-height 25px
    font-size 18px
  .u-guard
    width 165px
    margin 0 auto
    text-align center
    line-height 25px
    color #222
    font-size 14px
    background $bgc
    border-radius 10px  
  .u-search-icon
    position absolute
    top 4px
    right 15px
    line-height 40px
    i
      color #fff
      font-size 24px   
 
 
.u-slider
  height 220px
  img
    width 100%


.u-hot-list
  white-space nowrap
  width auto
  text-align center
  .u-item
    display inline-block
    float none
    margin 0
    padding-top 15px
    border none
  img
    display block
    width 100px
    height 75px
    margin 0 auto
    border-radius 10px
    border solid 1px #ccc
  .u-name
    font-size 12px
    overflow hidden
    text-overflow ellipsis
  .u-price
    color #619de5
    font-size 13px
    text-indent -3px










