@import 'base.styl'

.button-cart-wrap
  position absolute
  bottom 20px
  right 10px
.button-cart
	color #fff
	background $bl;
.button-cart-action-wrap
  width 100px
  line-height 30px
	.button-cart-number, .cart-action
		display inline-block
		width 30px
		height 30px
		text-align center
		border-radius 30px

.cart-modal-icon
	position absolute
	.icon-cart
	  padding-left 40px
	  font-size 25px
	  line-height 45px
	  color $bl
  .cart-number-tip
	  position absolute
	  top 0
	  left 55px
	  width 20px
	  height 20px
	  background $bl
	  border-radius 50px
	  color #fff
	  font-weight bold
	  text-align center
	  overflow hidden

.cart-item
  line-height 25px
  width 100%
  padding 0
  border none
